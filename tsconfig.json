{
  "include": [
    "./src/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "allowJs": true,
    "module": "es2015",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "pretty": true
  }
}
